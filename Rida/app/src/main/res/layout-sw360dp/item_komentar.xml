<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="2dp"
            android:paddingBottom="2dp">

            <TextView
                android:id="@+id/nama_komentator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nama Komentator"
                android:textStyle="bold"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:textColor="#222"
                android:textSize="15sp" />
            <TextView
                android:id="@+id/tgl_komentar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tgl Komentar"
                android:layout_alignParentRight="true"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:textColor="#222"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/isi_komentar"
                android:layout_below="@+id/nama_komentator"
                android:text="Isi Komentar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="#222"
                android:paddingLeft="8dp"/>
            <View
                android:id="@+id/garis"
                android:layout_below="@+id/isi_komentar"
                android:layout_width="match_parent"
                android:layout_marginLeft="9dp"
                android:layout_marginRight="9dp"
                android:layout_height="1dp"
                android:background="#dad8d8"/>

        </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>